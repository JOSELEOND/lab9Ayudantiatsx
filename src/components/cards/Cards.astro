---
import type { Cards } from "./dto/Cards";

const response = await fetch('https://dummyjson.com/products/2');
const data = await response.json();
//console.log(data);
---

<div class="card">
    {data.images && data.images.length > 0 && (
        <img class="img" src={data.images[0]} alt="Product" />
    )}
    <h1>{data.title}</h1>
    <p> Descrption: {data.description} </p>
    <p>USD$:{data.price}</p>
    <p>{data.brand}</p>
</div>
<style>
    .card {
    background-color: #85898e;
    border-radius: 20px;
    padding: 20px;
    margin-bottom: 20px;
    box-shadow: 0 10px 12px rgba(7, 7, 7, 0.1);
    max-width: 18rem;
}

.card p {
    margin: 0;
    padding: 5px 0;
    color: white;
    text-align: center;
}

.card p:first-child {
    font-weight: bold;
}
.card img{
    max-width: 18rem;
    border-radius: 10px;
}
.card h1{
    text-align: center;
}
</style>
